<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for SummaryActivity - Displays emotion count summary

    Design Rationale:
    - Date selector at top for choosing which day to view
    - Total count display for context
    - ListView shows breakdown by emotion type
    - Clean, organized layout for data visualization
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SummaryActivity">

    <!-- Header section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Date selector -->
    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <!-- Selected date display -->
    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday, Feb 14, 2026"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:textStyle="bold"/>

    <!-- Total count -->
    <TextView
        android:id="@+id/tv_total_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Logs: 0"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <!-- Summary list -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emotion Breakdown"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <ListView
        android:id="@+id/lv_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

</LinearLayout>